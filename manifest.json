{
  "manifest_version": 3,
  "name": "WeChat",
  "version": "1.1",
  "description": "Resume, Traduce, Corrige y Charla con chatgpt",
  "action": {
    "default_title": "WeChat",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs"  
  ],
  "host_permissions": [
   "*://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["popup.js"]
    }
  ],
  "icons": {
    "128": "logo128.png"
  }
}
